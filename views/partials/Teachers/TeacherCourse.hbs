<div class="form-group text-center pl-4" style="width:99%">
    {{#if message}}
<div class="alert alert-{{message.type}}" style="text-align: center">
    <strong>{{message.intro}}</strong> {{message.message}}
</div>
{{/if}}
        {{#if done}}
        <div class="alert alert-{{done.type}}" style="text-align: center">
            <strong>{{done.intro}}</strong> {{done.message}}
        </div>
        {{/if}}
    <form action="/teacherCourseREG" method="post" class="needs-validation">
        <div class="form-group" id="checkidteach">

        </div>

        <div class="form-group">
            <label>ID</label>
            <input type="number" min="1" class="form-control" placeholder="EX: 1 , 2 , 3" name="TEACHERIDCHECK"
                id="teacherid" required>
        </div>

        <div class="form-group">
            <label for="Name">Grade</label>
            <select class="custom-select" name="Grade" required>
                {{#each grade}}
                <option>{{this}}</option>
                {{/each}}

            </select>
        </div>
        <div class="form-group" id="Course Day">
            <label>Course Day</label>
            <select class="custom-select" name="Day" required>
                {{#each days}}
                <option>{{this}}</option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col"> <label for="Getting money">Houres</label>
                    <input type="number" min="1" max="12" class="form-control" placeholder="Houres: 01" name="TH" required>
                </div>
                <div class="col"> <label for="Getting money">Minutes</label>
                    <input type="number" min="0" max="60" class="form-control" placeholder="Minutes: 25" name="TM" required>
                </div>
                <div class="col"> <label for="Getting money">M</label>
                    <div class="col"> <select class="custom-select" name="TAP" required>
                            <option>AM</option>
                            <option>PM</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <div class="form-group" id="Teacher Cost">
            <label>Teacher Cost</label>
            <div class="input-group">
                <input type="number" min="0" class="form-control" placeholder="Ex: 120" name="TeacherCost" required>
                <div class="input-group-append">
                    <span class="input-group-text">L.E</span>
                </div>
            </div>
        </div>
        <div class="form-group" id="Center Cost">
            <label>Center Cost</label>
            <div class="input-group">
                <input type="number" min="0" class="form-control" placeholder="Ex: 120" name="CenterCost" required>
                <div class="input-group-append">
                    <span class="input-group-text">L.E</span>
                </div>
            </div>
        </div>
        <div class="form-group" id="Course Cost">
            <label>Course Cost</label>
            <div class="input-group">
                <input type="number" min="0" class="form-control" placeholder="Ex: 120" name="TotalCost" required>
                <div class="input-group-append">
                    <span class="input-group-text">L.E</span>
                </div>
            </div>
        </div>
        <div class="form-group mt-2" id="Button Add Course">
            <button type="submit" class="btn btn-dark">Add Course</button>
        </div>
    </form>
</div>