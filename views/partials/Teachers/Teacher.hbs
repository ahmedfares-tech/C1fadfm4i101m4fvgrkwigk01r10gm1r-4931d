{{#if message}}
<div class="alert alert-{{message.type}}" style="text-align: center">
    <strong>{{message.intro}}</strong> {{message.message}}
</div>
{{/if}}
        {{#if done}}
        <div class="alert alert-{{done.type}}" style="text-align: center">
            <strong>{{done.intro}}</strong> {{done.message}}
        </div>
        {{/if}}
<form action="/teacherREG" method="post" class="needs-validation">
    <div class="form-group">
        <label>Teacher Name</label>
        <input type="text" class="form-control" placeholder="EX: Ahmed Fares" name="TeacherName" required>
    </div>
    <div class="form-group" id="Course Name">
        <label>Course Name</label>
        <select class="custom-select" name="TeacherCourse" required>
            {{#each courses}}
            <option>{{this}}</option>
            {{/each}}

        </select>
    </div>
    <div class="form-group">
        <label>Teacher Number</label>
        <input type="number" min="0" class="form-control" placeholder="EX: 01000000" name="TeacherNumber" required>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-dark">Add Teacher</button>
    </div>
</form>