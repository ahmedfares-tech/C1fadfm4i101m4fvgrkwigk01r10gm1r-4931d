<script type="text/javascript">
    function convert() {
        var str;
        var srch = document.getElementById("course");
        str = srch.value;
        //srch.value = str.capitalize();
       srch.value = str.toLowerCase();
    }
</script>
        {{#if done}}
        <div class="alert alert-{{done.type}}" style="text-align: center">
            <strong>{{done.intro}}</strong> {{done.message}}
        </div>
        {{/if}}
<form action="/addcourse" method="post" style="padding:1%">
    <div class="form-group">
        <label>Courses</label>
        <input type="text" class="form-control" placeholder="Write Here" name="GCourses" id="course">
    </div>
    <button type="submit" class="btn btn-dark" onclick="convert()">Add Course Name</button>
</form> 
<br>
<form action="/new" method="get">
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">#ID</th>
                <th scope="col">CourseName</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <th scope="row">{{this.CourseCounter}}</th>
                <td>{{this.CourseName}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</form>